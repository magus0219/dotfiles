# Taps
tap 'caskroom/cask' # install ui apps
tap 'caskroom/fonts' # install fonts
tap 'caskroom/versions' # add mvcc of cask self
tap 'homebrew/bundle'
tap 'homebrew/dupes' # install dups cmd for mac os, provide more recent or bugfix version

# Make sure apps get installed in system Applications dir
cask_args appdir: '/Applications'

# Install GNU core utilities (those that come with OS X are outdated)
brew 'coreutils'

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew 'findutils'

# Install Bash 4
brew 'bash'

# Install more recent versions of some OS X tools
brew 'homebrew/dupes/grep'

# Install binaries
brew 'zsh'
brew 'git'
brew 'python3'

# Install apps
# cask 'google-chrome'
# cask 'vlc'
